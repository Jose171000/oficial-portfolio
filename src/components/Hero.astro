---
import heroImage from '@assets/images/astro-icon-dark.png';
import jsImage from '@assets/images/javascript-logo-0.png';
import cSharpImage from '@assets/images/Csharp1.png';
import cssImage from '@assets/images/css3-logo-png-transparent.png';
import htmlImage from '@assets/images/html5-logo-png-transparent.png';
import nodeImage from '@assets/images/nodejs-logo-png-node-js-on-light-background-1843.png';
import reactImage from '@assets/images/pinpng.com-thankful-react-png-6758716.png';
import postgreImage from '@assets/images/postgresql-logo.png';
import tsImage from '@assets/images/Typescript_logo_2020.svg.png';
import wordpressImage from '@assets/images/WordPress-logo.png';
import { Image } from '@astrojs/image/components';
import Button from '@components/ui/Button.astro';
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="container1 mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl">
				Hi! My name is <span class="text-orange">Jose Reategui</span> and I am a web developer based
				in Peru.
			</h1>
		</div>
		<div class="mb-10">
			<a href="#about">
				<Button style={'primary'} size={'lg'} class={'flex'} name="learn more">Learn more</Button>
			</a>
		</div>
	</div>
	<div
		data-testid="hero-img"
		class="container relative mb-10 flex w-1/2 items-center justify-center"
	>
		<div class="">
			<div class="mb-10 flex flex-row">
				<Image
					src={heroImage}
					alt="Coding girl"
					aspectRatio="4:4"
					format="png"
					width={100}
					height={100}
					loading="eager"
					class="img1 mr-10"
				/>
				<Image
					src={cSharpImage}
					alt="javascript"
					aspectRatio="4:4"
					format="png"
					width={100}
					height={100}
					class="img1 mr-10"
				/>
				<Image
					src={cssImage}
					alt="javascript"
					aspectRatio="4:4"
					format="png"
					width={100}
					height={100}
					class="img1"
				/>
			</div>
			<div class="mb-10 flex flex-row">
				<Image
					src={htmlImage}
					alt="javascript"
					aspectRatio="4:4"
					format="png"
					width={100}
					height={100}
					class="img1 mr-10"
				/>
				<Image
					src={nodeImage}
					alt="javascript"
					aspectRatio="4:4"
					format="png"
					width={100}
					height={100}
					class="img1 mr-10"
				/>
				<Image
					src={reactImage}
					alt="javascript"
					aspectRatio="4:4"
					format="png"
					width={100}
					height={100}
					class="img1 mr-10"
				/>
			</div>
			<div class="mb-10 flex flex-row">
				<Image
					src={postgreImage}
					alt="javascript"
					aspectRatio="4:4"
					format="png"
					width={100}
					height={100}
					class="img1 mr-10"
				/>
				<Image
					src={tsImage}
					alt="javascript"
					aspectRatio="4:4"
					format="png"
					width={100}
					height={100}
					class="img1 mr-10"
				/>

				<Image
					src={wordpressImage}
					alt="javascript"
					aspectRatio="4:4"
					format="png"
					width={100}
					height={100}
					class="img1 mr-10"
				/>
			</div>
			<div class="flex items-center justify-center">
				<Image
					src={jsImage}
					alt="javascript"
					aspectRatio="4:4"
					format="png"
					width={100}
					height={100}
					class="img1 mr-10"
				/>
			</div>
		</div>
	</div>
</section>
<style>
	.container1{
		order: 1;
	}
	.container{
		order: 2
	}
	.img1 {
		transition: 0.3s;
	}
	.img1:hover {
		transition: 0.3s;
		cursor: pointer;
		transform: scale(1.1);
	}
	.img1:active {
		transform: scale(2);
	}
	@media only screen and (max-width: 880px) {
		@keyframes pulsate {
			0%, 100% {
				transform: scale(1);
			}
			50% {
				transform: scale(1.1);
			}
		}
		.img1{
			animation: pulsate 2s infinite;
		}
		.container {
			margin-top: 80px;
			order: 1;
		}
		.container1{
			order: 2;
		}
	}
	@media only screen and (max-width: 620px) {
		.container {
			margin-right: 170px;
		}
	}
</style>
